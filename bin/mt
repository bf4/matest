#!/usr/bin/env ruby

require "time"
start_time = Time.now

$LOAD_PATH.unshift(File.expand_path('../lib', __dir__))

require "pathname"
require "matest"

RUNNER = Matest::Runner.new

ARGV.each do |file|
  RUNNER.load_file(Pathname(file).expand_path)
end

RUNNER.execute!

time_elapsed = Time.now - start_time

puts
puts "Elapsed: #{time_elapsed}"
